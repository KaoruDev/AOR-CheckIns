%h1=@event.name
%h3=@event.date.strftime("%b %e, %Y")
=link_to "Check In!", check_in_path(:user_id => current_user.id), remote: true, method: :post, class: "check_in_link" unless @attendees.include? current_user
%h4 List of Attendees
.attendees
  -@attendees.each do |attendee|
    .brick
      =image_tag attendee.avatar
      =attendee.name
      =attendee.twitter_handle

#templates
  %script.bricks{:type => "text/template"}
    .brick
      %img{:src => "{{ avatar }}"}
      %span {{ name }}
      %span {{ twitter_handle }}