.single-event-details
  .single-event-title
    =@event.name
  .single-event-date
    =@event.date.strftime("%b %d, %Y")

%h3 Attendees
.attendees
  -@attendees.each do |attendee|
    .brick
      .row
        .columns.small-3
          =image_tag attendee.avatar
        .columns.small-9
          =attendee.name
          %br
          =attendee.twitter_handle
          %br
          =link_to "Follow", "https://twitter.com/intent/user?screen_name=#{attendee.twitter_handle}"
#templates
  %script.bricks{:type => "text/template"}
    .brick
      %img{:src => "{{ avatar }}"}
      %span {{ name }}
      %a{href: "https://twitter.com/intent/user?screen_name={{ twitter_handle }}"} Follow
=content_for :javascript do
  -if can_user_check_in
    =subscribe_to "/messages/#{@event.id}"

    :javascript
      init.pinpoint(#{@event.id}, #{current_user.id})
      init.masonry($(".attendees"));